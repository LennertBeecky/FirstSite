    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item">
          Home
        </a>
        <a class="navbar-item">
          Application
        </a>
        <a class="navbar-item">
          Setup
        </a>
      </div>
    </div>
    <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary" href="https://thesis-c30c3.firebaseapp.com/register">
              <strong>Sign up</strong>
            </a>
            <a class="button is-light" href="https://thesis-c30c3.firebaseapp.com/">
              Log in
            </a>
          </div>
        </div>
    </div>
  </nav>
  <section class="hero is-link">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          De code van uw smartSpeaker: <%-code%> werd succesvol doorgegeven.
        </h1>
        <h2 class="subtitle">
          Registreer u hieronder om uw account te kunnen koppelen aan externe diensten.
        </h2>
      </div>
    </div>
  </section>
<section class="section">
  <div class="container">
    <div class="box">
      <h1 class="title">
        Registreer
      </h1>
      <form action="doRegistration" method="POST">
      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class="input" type="text" name="naam" placeholder="Naam" required>
          <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
          <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </p>
      </div>

      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class="input" type="text" name="voornaam" placeholder="Voornaam" required>
          <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
          <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </p>
      </div>

      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class= <%-inputEmail%> type="email" name="email" placeholder="Email" required>
          <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
          <span class="icon is-small is-right">
      <i class= <%-inputEmailIcon%> ></i>
    </span>
        </p>
        <%-inputEmailText%>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <input class= <%-inputPassword%> type="password" name="wachtwoord1" placeholder="Wachtwoord" required>
          <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
        <span class="icon is-small is-right">
        <i class= <%-inputPasswordIcon%> ></i>
    </span>
        </p>
        <%-inputPasswordText%>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <input class="input" type="password" name="wachtwoord2" placeholder="Herhaal Wachtwoord" required>
          <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
        </p>
      </div>
      <input type="hidden" name="id" value=<%-code%> />
      <div class="field">
        <p class="control">
          <button class="button is-info" type="submit">
            Registreer
          </button>
        </p>
      </div>
      </form>
    </div>
  </div>
</section>

